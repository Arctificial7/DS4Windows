<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Observable Property</Title>
			<Shortcut>obprop</Shortcut>
        </Header>
        <Snippet>
            <Code Language="CSharp">
                <![CDATA[
				private $Type$ $FieldName$;
				public $Type$ $PropertyName$
				{
					get => $FieldName$;
					set => SetProperty(ref $FieldName$, value);
				}$selected$ $end$
				]]>
            </Code>
			<Declarations>
				<Literal>
					<ID>Type</ID>
					<ToolTip>Replace with the property type</ToolTip>
					<Default>TheType</Default>
				</Literal>
				<Literal>
					<ID>PropertyName</ID>
					<ToolTip>Replace with the property name</ToolTip>
					<Default>ThePropertyName</Default>
				</Literal>
				<Literal>
					<ID>FieldName</ID>
					<ToolTip>Replace with the field name</ToolTip>
					<Default>TheFieldName</Default>
				</Literal>
			</Declarations>
        </Snippet>
    </CodeSnippet>
