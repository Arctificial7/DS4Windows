	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Wrapped Observable Property</Title>
			<Shortcut>obwprop</Shortcut>
		</Header>
		<Snippet>
			<Code Language="CSharp">
				<![CDATA[
				public $Type$ $PropertyName$
				{
					get => $FieldName$.$ChildPropertyName$;
					set => SetProperty($FieldName$.$ChildPropertyName$, value, $FieldName$, (obj, val) => obj.$FieldName$ = val);
				}$selected$ $end$
				]]>
			</Code>
			<Declarations>
				<Literal>
					<ID>Type</ID>
					<ToolTip>Replace with the property type</ToolTip>
					<Default></Default>
				</Literal>
				<Literal>
					<ID>PropertyName</ID>
					<ToolTip>Replace with the property name</ToolTip>
					<Default></Default>
				</Literal>
				<Literal>
					<ID>FieldName</ID>
					<ToolTip>Replace with the field name</ToolTip>
					<Default></Default>
				</Literal>
				<Literal>
					<ID>ChildPropertyName</ID>
					<ToolTip>Replace with the child name</ToolTip>
					<Default></Default>
				</Literal>
			</Declarations>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>