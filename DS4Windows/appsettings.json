{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "DS4Windows" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\DS4Windows.log",
          "rollingInterval": "Day"
        }
      },
      { "Name": "InMemorySink" }
    ]
  }
}
